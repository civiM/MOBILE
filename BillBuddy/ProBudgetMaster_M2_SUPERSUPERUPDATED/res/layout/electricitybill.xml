<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:background="#FFFF00">

    <TextView
        android:id="@+id/titleElectricity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:text="Electricity Bill Forecaster"
        android:textSize="30sp" />

    <GridView
        android:id="@+id/appliances"
        android:layout_width="match_parent"
        android:layout_height="400px"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/titleElectricity"
        android:layout_marginTop="26dp"
		android:gravity="center"
        android:numColumns="3" >
    </GridView>

    <Button
        android:id="@+id/electricViewSummary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/appliances"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="19dp"
        android:text="View Summary" />

</RelativeLayout>
